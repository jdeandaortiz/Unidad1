<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Consultar', user %></td>
        <td><%= link_to 'Actualizar', edit_user_path(user) %></td>
        <td><%= link_to 'Baja', user, method: :delete, data: { confirm: '¿Está seguro de dar de baja al usuario?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path %>
